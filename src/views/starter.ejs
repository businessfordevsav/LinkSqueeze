          <div class="footer-theme-toggle">
            <span>Change Theme</span>
            <button class="footer-theme-btn" id="footerThemeToggle">
              <i class="fas fa-moon"></i>
              <i class="fas fa-sun"></i>
            </button>
          </div>
        </div>
      </div>
