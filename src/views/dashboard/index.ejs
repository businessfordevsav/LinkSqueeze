        qrPreviewImage.alt = `QR Code for ${shortId}`;

        qrPreviewContent.appendChild(qrPreviewImage);
        qrPreviewContainer.appendChild(qrPreviewOverlay);
        qrPreviewContainer.appendChild(qrPreviewContent);
